extends layout

block content
  div#player
    <iframe id="playerframe" src="http://player.vimeo.com/video/#{asset.video_id}?api=1&player_id=playerframe&autoplay=1" width="100%" height="100%" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
  div#arrow
    a()#intobutton &larr;
  div#metadata
    div#titlearea
      h1= asset.title
    ul
      li.youtube
        a(href='http://www.youtube.com/watch?v=' + asset.video_id) Source
      li.gimmebar
        a(href='http://gim.ie/' + asset.short_url_token) gim.ie/#{asset.short_url_token}
      li.user
        a(href='https://gimmebar.com/loves/' + username) #{username}
      if (typeof(collection_slug) != 'undefined')
        li.gimmebar
          a(href='#') Collection
  
  script('text/javascript' src="/javascripts/jquery.js")
  script('text/javascript' src="http://a.vimeocdn.com/js/froogaloop2.min.js")
  script('text/javascript')
    var iframe = $('#playerframe')[0],
    player = $f(iframe),
    status = $('.status');
    // When the player is ready, add listeners for pause, finish, and playProgress
    player.addEvent('ready', function() {
    
      player.addEvent('pause', onPause);
      player.addEvent('finish', onFinish);
    });

    function onPause(id) {
      console.log('paused')
    }

    function onFinish(id) {
      console.log('finished');
      window.location.href = '';
    }